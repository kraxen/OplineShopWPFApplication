<Window x:Class="OplineShopWPFApplication.Windows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OplineShopWPFApplication.Windows"
        mc:Ignorable="d"
        Title="Новый клиент" 
        Height="300" 
        Width="200"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        FontStyle="Italic"
        Icon="..\Source\free-icon-shop-69986.png">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Имя:"/>
            <TextBox Text="{Binding Name}"/>
            <TextBlock Text="Фамилия:"/>
            <TextBox Text="{Binding Suname}"/>
            <TextBlock Text="Отчество:"/>
            <TextBox Text="{Binding Patronymic}"/>
            <TextBlock Text="Номер телефона:"/>
            <TextBox Text="{Binding Phone}"/>
            <TextBlock Text="Email:"/>
            <TextBox Text="{Binding Email}"/>
            <Button Content="Сохранить" Command="{Binding SaveClient}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
